<% content_for :header_button do%>
    <%= link_to 'Back', 
        @lampiran_eleven_close_contact_information, 
        class: 'btn btn-sm btn-neutral'%>
    <%= link_to 'Edit', 
        edit_lampiran_eleven_close_contact_information_info_exposes_officer_path(@lampiran_eleven_close_contact_information,@lampiran_eleven_info_exposes_officer), 
        class: 'btn btn-sm btn-neutral'%>
    <div class="dropdown">
      <a class="btn btn-sm btn-neutral" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-ellipsis-v"></i>
      </a>
      <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow" style="">
        <% if @lampiran_eleven_close_contact_information.info_exposes_officer.contact_symptom.nil? %>
          <%= link_to 'Add 5.1', new_lampiran_eleven_close_contact_information_info_exposes_officer_contact_symptom_path(@lampiran_eleven_close_contact_information,@lampiran_eleven_close_contact_information.info_exposes_officer) ,
            class: "dropdown-item"%>
        <% else %>
          <%= link_to 'Show 5.1', lampiran_eleven_close_contact_information_information_expose_close_contacts_path(@lampiran_eleven_close_contact_information,@lampiran_eleven_close_contact_information.info_exposes_officer,@lampiran_eleven_close_contact_information.info_exposes_officer.contact_symptom),
            class: "dropdown-item"%>
        <% end %>
        <% if @lampiran_eleven_close_contact_information.info_exposes_officer.respiratory_symptom.nil? %>
          <%= link_to 'Add 5.2', new_lampiran_eleven_close_contact_information_info_exposes_officer_respiratory_symptom_path(@lampiran_eleven_close_contact_information,@lampiran_eleven_close_contact_information.info_exposes_officer) ,
            class: "dropdown-item"%>
        <% else %>
          <%= link_to 'Show 5.2', lampiran_eleven_close_contact_information_info_exposes_officer_respiratory_symptom_path(@lampiran_eleven_close_contact_information,@lampiran_eleven_close_contact_information.info_exposes_officer,@lampiran_eleven_close_contact_information.info_exposes_officer.respiratory_symptom),
            class: "dropdown-item"%>
        <% end %>
        <% if @lampiran_eleven_close_contact_information.info_exposes_officer.other_symptom.nil? %>
          <%= link_to 'Add 5.3', new_lampiran_eleven_close_contact_information_info_exposes_officer_other_symptom_path(@lampiran_eleven_close_contact_information,@lampiran_eleven_close_contact_information.info_exposes_officer) ,
            class: "dropdown-item"%>
        <% else %>
          <%= link_to 'Show 5.3', lampiran_eleven_close_contact_information_info_exposes_officer_other_symptom_path(@lampiran_eleven_close_contact_information,@lampiran_eleven_close_contact_information.info_exposes_officer,@lampiran_eleven_close_contact_information.info_exposes_officer.other_symptom),
            class: "dropdown-item"%>
        <% end %>
      </div>
    </div>
<% end %>
<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col">
            <h3 class="mb-0">2. Data Petugas Pengumpul Data</h3>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md">
            <span class="h6 surtitle text-muted">Nama</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.user.username %></span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">Institusi</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.user.public_health_center.public_health_center %></span>
          </div>
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">Email/No. Telp</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.user.email %></span>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Tanggal Pengisian Formulir (Hari/Tanggal/Tahun)</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.fill_in_date.strftime("%A/%d/%Y") %></span>
          </div>
        </div>
        <div class="row">
          <div class="col-md">
            <span class="h6 surtitle text-muted">Tanggal Pelacakan Kontak/Interview (Hari/Tanggal/Tahun)</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.contact_tracking_date.strftime("%A/%d/%Y") %></span>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col">
            <h3 class="mb-0">3. Informasi Kontak Erat</h3>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">Nama</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_close_contact_information.patient.name %>
            </span>
          </div>
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">No. Identitas/KTP</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_close_contact_information.patient.no_identity %>
            </span>
          </div>
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">Jenis Kelamin</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_close_contact_information.patient.gender == 'Male' ? 'Laki-laki' : 'Perempuan' %>
            </span>
          </div>
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">Kebangsaan/Etnik (Suku)</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_close_contact_information.patient.tribe.tribe %>
            </span>
          </div>
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">Tanggal Lahir</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_close_contact_information.patient.date_of_birth.strftime("%m/%d/%Y") %>
            </span>
          </div>
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">Usia (Tahun/Bulan)</span>
            <span class="d-block h3">
              <% d = @lampiran_eleven_close_contact_information.patient.date_of_birth.to_date %>
              <% year = ((Time.zone.now - d.to_time) / 1.year.seconds).floor %>
              <% month = (((Time.zone.now - d.to_time) / 1.month.seconds).floor) % 12 %>
              <%= "#{year} / #{month}" %>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Hubungan dengan kasus Konfirmasi/kasus PDP</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.contact_with_positive_case %></span>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Alamat tempat tinggal</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.patient.address %></span>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Puskesmas terdekat</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.public_health_center.public_health_center %></span>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Lokasi/Tempat</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.placement %></span>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col">
            <h3 class="mb-0">5. Data Petugas Pengumpul Data</h3>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md">
            <span class="h6 surtitle text-muted">Posisi Bekerja</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_info_exposes_officer.job_position.job_position %>
            </span>
          </div>
          <div class="col-md">
            <span class="h6 surtitle text-muted">Tempat Bekerja</span>
            <span class="d-block h3">
              <% if !@lampiran_eleven_info_exposes_officer.dinkes_province.nil? %>
                <%= @lampiran_eleven_info_exposes_officer.dinkes_province.dinkes_province %>
              <% elsif !@lampiran_eleven_info_exposes_officer.dinkes_region.nil? %>
                <%= @lampiran_eleven_info_exposes_officer.dinkes_region.dinkes_region %>
              <% elsif !@lampiran_eleven_info_exposes_officer.hospital.nil? %>
                <%= @lampiran_eleven_info_exposes_officer.hospital.hospital %>
              <% elsif !@lampiran_eleven_info_exposes_officer.public_health_center.nil? %>
                <%= @lampiran_eleven_info_exposes_officer.public_health_center.public_health_center %>
              <% elsif !@lampiran_eleven_info_exposes_officer.hospital.nil? %>
                <%= @lampiran_eleven_info_exposes_officer.hospital.hospital %>
              <% else %>
                <%= '' %>
              <% end %>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="col-md">
            <span class="h6 surtitle text-muted">Kontak fisik dengan kasus konfirmasi</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_info_exposes_officer.is_contact_physic_with_positive == true ? "Ya" : "Tidak" %>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="col-md">
            <span class="h6 surtitle text-muted">Apakah melakukan prosedur yang menimbulkan aerosol</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_info_exposes_officer.is_procedure_aerosol == true ? "Ya" : "Tidak" %>, <%= @lampiran_eleven_info_exposes_officer.explain_of_procedure_aerosol %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% if notice %>
  <div class="notifikasi" data-notifikasi="<%= notice %>"></div>
<% end %>
<%= render partial: 'layouts/body' %>