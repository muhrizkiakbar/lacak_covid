<% content_for :header_button do%>
  <%= link_to 'New', 
    new_lampiran_eleven_close_contact_information_path, 
    class: 'btn btn-sm btn-neutral'%>
<% end %>
<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <div class="card">
      <div class="card-header border-0">
        <div class="row">
          <div class="col">
            <h3 class="mb-0">3. Informasi Kontak Erat</h3>
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table align-items-center table-flush table-striped">
          <thead class="thead-light">
            <tr>
              <th>User</th>
              <th>Main patient</th>
              <th>Main public health center</th>
              <th>Fill in date</th>
              <th>Contact tracking date</th>
              <th>Contact with positive case</th>
              <th>Placement</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @lampiran_eleven_close_contact_informations.each do |lampiran_eleven_close_contact_information| %>
            <tr>
              <td><%= lampiran_eleven_close_contact_information.user.username %></td>
              <td><%= lampiran_eleven_close_contact_information.patient.name %></td>
              <td><%= lampiran_eleven_close_contact_information.public_health_center.public_health_center %></td>
              <td><%= lampiran_eleven_close_contact_information.fill_in_date %></td>
              <td><%= lampiran_eleven_close_contact_information.contact_tracking_date %></td>
              <td><%= lampiran_eleven_close_contact_information.contact_with_positive_case %></td>
              <td><%= lampiran_eleven_close_contact_information.placement %></td>
              <td class="text-right">
                <div class="dropdown">
                  <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v"></i>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow" style="">
                    <% if lampiran_eleven_close_contact_information.information_expose.nil? %>
                      <%= link_to 'Add Form 11-4', 
                        new_lampiran_eleven_close_contact_information_information_expose_path(lampiran_eleven_close_contact_information),
                        class: "dropdown-item" %>
                    <% else %>
                      <%= link_to 'Show Form 11-4', 
                        lampiran_eleven_close_contact_information_information_expose_path(lampiran_eleven_close_contact_information,lampiran_eleven_close_contact_information.information_expose),
                        class: "dropdown-item" %>
                    <% end %>
                    <% if lampiran_eleven_close_contact_information.info_exposes_officer.nil? %>
                      <%= link_to 'Add Form 11-5', 
                        new_lampiran_eleven_close_contact_information_info_exposes_officer_path(lampiran_eleven_close_contact_information),
                        class: "dropdown-item" %>
                    <% else %>
                      <%= link_to 'Show Form 11-5', 
                        lampiran_eleven_close_contact_information_info_exposes_officer_path(lampiran_eleven_close_contact_information,lampiran_eleven_close_contact_information.info_exposes_officer),
                        class: "dropdown-item" %>
                    <% end %>
                    <% if lampiran_eleven_close_contact_information.contact_status.nil? %>
                      <%= link_to 'Add Form 11-5', 
                        new_lampiran_eleven_close_contact_information_contact_status_path(lampiran_eleven_close_contact_information),
                        class: "dropdown-item" %>
                    <% else %>
                      <%= link_to 'Show Form 11-5', 
                        lampiran_eleven_close_contact_information_contact_status_path(lampiran_eleven_close_contact_information,lampiran_eleven_close_contact_information.contact_status),
                        class: "dropdown-item" %>
                    <% end %>
                    <%= link_to 'Edit', 
                      edit_lampiran_eleven_close_contact_information_path(lampiran_eleven_close_contact_information),
                      class: "dropdown-item" %>
                    <%= link_to 'Delete', 
                      lampiran_eleven_close_contact_information, 
                      method: :delete, 
                      data: { confirm: 'Are you sure?' },
                      class: "dropdown-item" %>
                  </div>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
<% if notice %>
  <div class="notifikasi" data-notifikasi="<%= notice %>"></div>
<% end %>
<%= render partial: 'layouts/body' %>