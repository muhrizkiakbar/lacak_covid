    <div class="col-md-3">
      <div class="form-group">
        <div class="custom-control custom-checkbox">
          <%= form.check_box :is_obesity, class: "custom-control-input" %>
          <%= form.label :is_obesity,
          "Obesitas",
          class: "custom-control-label" %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <div class="custom-control custom-checkbox">
          <%= form.check_box :is_asthma, class: "custom-control-input" %>
          <%= form.label :is_asthma,
