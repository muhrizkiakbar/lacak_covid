    </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <div class="form-group">
        <div class="custom-control custom-checkbox">
          <%= form.check_box :is_cancer, class: "custom-control-input" %>
          <%= form.label :is_cancer,
          "Kanker",
          class: "custom-control-label" %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <div class="custom-control custom-checkbox">
          <%= form.check_box :is_diabetes, class: "custom-control-input" %>
          <%= form.label :is_diabetes,
          "Diabetes",
          class: "custom-control-label" %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <div class="custom-control custom-checkbox">
          <%= form.check_box :is_ppok, class: "custom-control-input" %>
          <%= form.label :is_ppok,
          "PPOK (non-asma)",
          class: "custom-control-label" %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group">
        <div class="custom-control custom-checkbox">
          <%= form.check_box :is_hiv, class: "custom-control-input" %>
          <%= form.label :is_hiv,
          "HIV/Defisiesi Imun",
          class: "custom-control-label" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
