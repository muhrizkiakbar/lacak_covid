<% if (params[:action]==="new") || (params[:action]==="create") %>
<% url = lampiran_eleven_close_contact_information_comorbid_conditions_path(@lampiran_eleven_close_contact_information)
  method = "post"
%>
<% else %>
<% url = lampiran_eleven_close_contact_information_comorbid_conditions_path(@lampiran_eleven_close_contact_information)
  method = "patch"
%>
<% end %>
<%= form_for(lampiran_eleven_comorbid_condition, url: url, :method => method) do |form| %>
  <% if lampiran_eleven_comorbid_condition.errors.any? %>
