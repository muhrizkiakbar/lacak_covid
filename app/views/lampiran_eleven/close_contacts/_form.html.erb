      <div class="form-group">
        <div class="custom-control custom-checkbox mb-md-5">
          <%= form.check_box :question_number_3, class: "custom-control-input" %>
          <%= form.label :question_number_3, "Dalam 14 hari ini kontak dengan orang terkonfirmasi atau PDP Covid-19; Apabila Ya,", class: "custom-control-label" %>
