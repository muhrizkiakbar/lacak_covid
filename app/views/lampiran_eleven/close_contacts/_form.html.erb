                :slug,
                :city,
                {:prompt => false},
                {class: "form-control",
                "data-toggle": "select",
                "title": "Example (Belum Menikah)",
                "data-live-search": "true",
                "data-live-search-placeholder": "Cari ...",
                "data-placeholder": "Ke"}) %>
            <% else %>
              <%= form.collection_select(:end_travel_qn_2_id,
                Main::City.all,
                :slug,
                :city,
                {:prompt => false,
