<% content_for :header_button do%>
    <%= link_to 'Back', 
        lampiran_eleven_close_contact_information_information_expose_path(@lampiran_eleven_close_contact_information,@lampiran_eleven_close_contact_information.information_expose), 
        class: 'btn btn-sm btn-neutral'%>
    <%= link_to 'Edit', 
        edit_lampiran_eleven_close_contact_information_information_expose_close_contact_path(@lampiran_eleven_close_contact_information,@lampiran_eleven_information_expose,@lampiran_eleven_close_contact), 
        class: 'btn btn-sm btn-neutral'%>
    <% if @lampiran_eleven_information_expose.close_contact_info_home.nil? %>
      <%= link_to 'New 4.2', 
        new_lampiran_eleven_close_contact_information_information_expose_close_contact_info_home_path(@lampiran_eleven_close_contact_information,@lampiran_eleven_information_expose),
        class: 'btn btn-sm btn-neutral' %>
    <% else %>
      <%= link_to 'Show 4.2', 
        lampiran_eleven_close_contact_information_information_expose_close_contact_info_home_path(@lampiran_eleven_close_contact_information,@lampiran_eleven_information_expose,@lampiran_eleven_information_expose.close_contact_info_home),
        class: 'btn btn-sm btn-neutral' %>
    <% end %>
<% end %>
<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col">
            <h3 class="mb-0">2. Data Petugas Pengumpul Data</h3>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md">
            <span class="h6 surtitle text-muted">Nama</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.user.username %></span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">Institusi</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.user.public_health_center.public_health_center %></span>
          </div>
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">Email/No. Telp</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.user.email %></span>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Tanggal Pengisian Formulir (Hari/Tanggal/Tahun)</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.fill_in_date.strftime("%A/%d/%Y") %></span>
          </div>
        </div>
        <div class="row">
          <div class="col-md">
            <span class="h6 surtitle text-muted">Tanggal Pelacakan Kontak/Interview (Hari/Tanggal/Tahun)</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.contact_tracking_date.strftime("%A/%d/%Y") %></span>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col">
            <h3 class="mb-0">3. Informasi Kontak Erat</h3>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">Nama</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_close_contact_information.patient.name %>
            </span>
          </div>
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">No. Identitas/KTP</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_close_contact_information.patient.no_identity %>
            </span>
          </div>
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">Jenis Kelamin</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_close_contact_information.patient.gender == 'Male' ? 'Laki-laki' : 'Perempuan' %>
            </span>
          </div>
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">Kebangsaan/Etnik (Suku)</span>
            <span class="d-block h3">
            Tribe
            </span>
          </div>
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">Tanggal Lahir</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_close_contact_information.patient.date_of_birth.strftime("%m/%d/%Y") %>
            </span>
          </div>
          <div class="col-md-6">
            <span class="h6 surtitle text-muted">Usia (Tahun/Bulan)</span>
            <span class="d-block h3">
              <% d = @lampiran_eleven_close_contact_information.patient.date_of_birth.to_date %>
              <% year = ((Time.zone.now - d.to_time) / 1.year.seconds).floor %>
              <% month = (((Time.zone.now - d.to_time) / 1.month.seconds).floor) % 12 %>
              <%= "#{year} / #{month}" %>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Hubungan dengan kasus Konfirmasi/kasus PDP</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.contact_with_positive_case %></span>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Alamat tempat tinggal</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.patient.address %></span>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Puskesmas terdekat</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.public_health_center.public_health_center %></span>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Lokasi/Tempat</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact_information.placement %></span>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col">
            <h3 class="mb-0">4. Informasi Paparan</h3>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md">
            <span class="h6 surtitle text-muted">Jenis Kontak</span>
            <span class="d-block h3">
              <%= (@lampiran_eleven_information_expose.type_contact.type_contact.nil? == true) ? @lampiran_eleven_information_expose.other_type_contact : @lampiran_eleven_information_expose.type_contact.type_contact %>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="col-md">
            <span class="h6 surtitle text-muted">Tanggal</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_information_expose.date_contact.strftime("%d/%m/%Y") %>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="col-md">
            <span class="h6 surtitle text-muted">Durasi</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_information_expose.duration_contact %>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="col-md">
            <span class="h6 surtitle text-muted">Lokasi</span>
            <span class="d-block h3">
              <%= (@lampiran_eleven_information_expose.set_location.set_location.nil? == true) ? @lampiran_eleven_information_expose.other_set_location : @lampiran_eleven_information_expose.set_location.set_location %>
            </span>
          </div>
        </div>
      </div>
    </div>
    
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col">
            <h3 class="mb-0">4.1. Kontak Erat</h3>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Mempunyai riwayat perjalanan Internasional dalam 14 hari</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact.question_number_1 == true ? "Ya" : "Tidak" %></span>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Riwayat Perjalanan</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact.answer_qn_1 %></span>
          </div>
          <div class="col">
            <span class="h6 surtitle text-muted">Tanggal Perjalanan International</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_close_contact.date_question_number_1.nil? == true ? "" : @lampiran_eleven_close_contact.date_question_number_1.strftime("%d/%m/%Y") %>
            </span>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Mempunyai riwayat perjalanan Domestik / Dalam Negeri dalam 14 hari</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact.question_number_2 == true ? "Ya" : "Tidak" %></span>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Riwayat Perjalanan</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_close_contact.start_travel_qn_2.city %> - <%= @lampiran_eleven_close_contact.end_travel_qn_2.city %>
            </span>
          </div>
          <div class="col">
            <span class="h6 surtitle text-muted">Tanggal Perjalanan Domestik</span>
            <span class="d-block h3">
              <%= @lampiran_eleven_close_contact.date_question_number_2.nil? == true ? "" : @lampiran_eleven_close_contact.date_question_number_2.strftime("%d/%m/%Y") %>
            </span>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Dalam 14 hari ini kontak dengan orang terkonfirmasi atau PDP Covid-19; Apabila Ya,</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact.question_number_3 == true ? "Ya" : "Tidak" %></span>
          </div>
          <div class="col">
            <span class="h6 surtitle text-muted">Tanggal kontak terakhir</span>
            <span class="d-block h3"><%= @lampiran_eleven_close_contact.date_question_number_3.nil? == true ? "" : @lampiran_eleven_close_contact.date_question_number_3.strftime("%d/%m/%Y") %></span>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Pekerjaan</span>
            <span class="d-block h3">
              <%= !@lampiran_eleven_close_contact.job_type.nil? == true ? @lampiran_eleven_close_contact.job_type.job_type : @lampiran_eleven_close_contact.other_job_type %>
            </span>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Lokasi, Fasilitas, dan Alamat Tempat Kerja</span>
            <span class="d-block h3">

              <% if current_user.public_health_center.nil? %>
                Disembunyikan.
              <% else %>
                <%= @lampiran_eleven_close_contact.address_job %>
              <% end %>
            </span>
          </div>
        </div>

        <div class="row">
          <div class="col">
            <span class="h6 surtitle text-muted">Transportasi yang digunakan sehari-hari 14 hari terakhir</span>
            <span class="d-block h3">
              <%= !@lampiran_eleven_close_contact.transportation.nil? == true ? @lampiran_eleven_close_contact.transportation.transportation : @lampiran_eleven_close_contact.other_transportation %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% if notice %>
  <div class="notifikasi" data-notifikasi="<%= notice %>"></div>
<% end %>
<%= render partial: 'layouts/body' %>