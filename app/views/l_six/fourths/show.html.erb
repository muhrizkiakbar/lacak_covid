                    <table class="table align-items-center table-flush">
                      <thead class="thead-light">
                        <tr>
                          <th>Nama RS</th>
                          <th>Kota</th>
                          <th>Provinsi/Negara</th>
                          <th>Tgl Kunjungan</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @l_six_fourth.ls_f_hospital_dests.each do |hospital| %>
                        <tr>
                          <td><%= hospital.hospital %></td>
                          <td><%= hospital.city %></td>
                          <td><%= hospital.visit_date.nil? ? "-" : hospital.visit_date.strftime("%d/%m/%Y") %></td>
                          <td><%= hospital.province_city %></td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% end %>
              </li>

              <li class="list-group-item px-0 border-0">
                <div class="row align-items-center mb-2">
                  <div class="col">
                    <span class="h4 mb-0">
                      Dalam 14 hari sebelum sakit, mengunjungi pasar hewan ?
                    </span>
                    <% if @l_six_fourth.animal_market == "ya" %>
                      <span class="text-success"><%=icon("fas", "check")%></span>
                      <small>Ya</small>
                    <% elsif @l_six_fourth.animal_market == "tidak_tahu" %>
                      <span class="text-gray"><%=icon("fas", "question")%></span>
                      <small>Tidak Tahu</small>
                    <% elsif @l_six_fourth.animal_market == "tidak" %>
                      <span class="text-danger"><%=icon("fas", "times")%></span>
                      <small>Tidak</small>
                    <% end %>
                  </div>
                  <div class="col-auto">
                    <% if @l_six_fourth.animal_market == "ya" %>
                      <%= link_to 'Add', 
                        new_l_six_first_second_third_fourth_f_animal_dest_path(
                          @l_six_first,@l_six_first.ls_second,@l_six_first.ls_third,@l_six_first.ls_fourth
                        ),
                        class: "btn btn-sm btn-primary" %>
                    <% end %>
                  </div>
                </div>
                <% if @l_six_fourth.ls_f_animal_dests.any? %>
                  <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                      <thead class="thead-light">
                        <tr>
                          <th>Nama Lokasi</th>
                          <th>Kota</th>
                          <th>Provinsi/Negara</th>
                          <th>Tgl Kunjungan</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @l_six_fourth.ls_f_animal_dests.each do |animal| %>
                        <tr>
                          <td><%= animal.location %></td>
                          <td><%= animal.city %></td>
                          <td><%= animal.province_city %></td>
                          <td><%= animal.visit_date.nil? ? "-" : animal.visit_date.strftime("%d/%m/%Y") %></td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% end %>
              </li>

              <li class="list-group-item px-0 border-0">
                <div class="row align-items-center mb-2">
                  <div class="col">
                    <span class="h4 mb-0">
                      Dalam 14 hari sebelum sakit, apakah memiliki kontak erat dengan pasien dalam pengawasan COVID-19 ?
                    </span>
                    <% if @l_six_fourth.contact_pdp == "ya" %>
                      <span class="text-success"><%=icon("fas", "check")%></span>
                      <small>Ya</small>
                    <% elsif @l_six_fourth.contact_pdp == "tidak_tahu" %>
                      <span class="text-gray"><%=icon("fas", "question")%></span>
                      <small>Tidak Tahu</small>
                    <% elsif @l_six_fourth.contact_pdp == "tidak" %>
                      <span class="text-danger"><%=icon("fas", "times")%></span>
                      <small>Tidak</small>
                    <% end %>
                  </div>
                  <div class="col-auto">
                    <% if @l_six_fourth.contact_pdp == "ya" %>
                      <%= link_to 'Add', 
                        new_l_six_first_second_third_fourth_f_pdp_dest_path(
                          @l_six_first,@l_six_first.ls_second,@l_six_first.ls_third,@l_six_first.ls_fourth
                        ),
                        class: "btn btn-sm btn-primary" %>
                    <% end %>
                  </div>
                </div>
                <% if @l_six_fourth.ls_f_pdp_dests.any? %>
                  <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                      <thead class="thead-light">
                        <tr>
                          <th>Nama</th>
                          <th>Alamat</th>
                          <th>Hubungan</th>
                          <th>Tgl Kontak Pertama</th>
                          <th>Tgl Kontak Terakhir</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @l_six_fourth.ls_f_pdp_dests.each do |pdp| %>
                        <tr>
                          <td><%= pdp.name %></td>
                          <td>
                            <% if current_user.public_health_center.nil? %>
                              Disembunyikan.
                            <% else %>
                              <%= pdp.address %>
                            <% end %>
                          </td>
                          <td><%= pdp.relation %></td>
                          <td><%= pdp.date_contact.nil? ? "-" : pdp.date_contact.strftime("%d/%m/%Y") %></td>
                          <td><%= pdp.last_date_contact.nil? ? "-" : pdp.last_date_contact.strftime("%d/%m/%Y") %></td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% end %>
              </li>

              <li class="list-group-item px-0 border-0">
                <div class="row align-items-center mb-2">
                  <div class="col">
                    <span class="h4 mb-0">
                      Dalam 14 hari sebelum sakit, apakah memiliki kontak erat dengan kasus konfirmasi COVID-19 ?
                    </span>
                    <% if @l_six_fourth.contact_positive == "ya" %>
                      <span class="text-success"><%=icon("fas", "check")%></span>
                      <small>Ya</small>
                    <% elsif @l_six_fourth.contact_positive == "tidak_tahu" %>
                      <span class="text-gray"><%=icon("fas", "question")%></span>
                      <small>Tidak Tahu</small>
                    <% elsif @l_six_fourth.contact_positive == "tidak" %>
                      <span class="text-danger"><%=icon("fas", "times")%></span>
                      <small>Tidak</small>
                    <% end %>
                  </div>
                  <div class="col-auto">
                    <% if @l_six_fourth.contact_positive == "ya" %>
                      <%= link_to 'Add', 
                        new_l_six_first_second_third_fourth_f_positive_dest_path(
                          @l_six_first,@l_six_first.ls_second,@l_six_first.ls_third,@l_six_first.ls_fourth
                        ),
                        class: "btn btn-sm btn-primary" %>
                    <% end %>
                  </div>
                </div>
                <% if @l_six_fourth.ls_f_positive_dests.any? %>
                  <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                      <thead class="thead-light">
                        <tr>
                          <th>Nama</th>
                          <th>Alamat</th>
                          <th>Hubungan</th>
                          <th>Tgl Kontak Pertama</th>
                          <th>Tgl Kontak Terakhir</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @l_six_fourth.ls_f_positive_dests.each do |pos| %>
                        <tr>
                          <td><%= pos.name %></td>
                          <td>
                            
                            <% if current_user.public_health_center.nil? %>
                              Disembunyikan.
                            <% else %>
                              <%= pos.address %></td>
                            <% end %>
                          <td><%= pos.relation %></td>
                          <td><%= pos.date_contact.nil? ? "-" : pos.date_contact.strftime("%d/%m/%Y") %></td>
                          <td><%= pos.last_date_contact.nil? ? "-" : pos.last_date_contact.strftime("%d/%m/%Y") %></td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% end %>
              </li>
              
            </ul>
            <hr class="my-2">
            <span class="h4 mb-0"mt-3">
              Apakah pasien termasuk cluster ISPA berat (demam dan pneumonia membutuhkan
              perawatan Rumah Sakit) yang tidak diketahui penyebabnya dimana kasus
              COVID-19 diperiksa ?
            </h4>
            <% if @l_six_fourth.ispa_chronic == "ya" %>
              <span class="text-success"><%=icon("fas", "check")%></span>
              <small>Ya</small>
            <% elsif @l_six_fourth.ispa_chronic == "tidak_tahu" %>
              <span class="text-gray"><%=icon("fas", "question")%></span>
              <small>Tidak Tahu</small>
            <% elsif @l_six_fourth.ispa_chronic == "tidak_tahu" %>
              <span class="text-danger"><%=icon("fas", "times")%></span>
              <small>Tidak</small>
            <% end %>
            <div class="list-group list-group-flush">
              <div class="list-group-item flex-column align-items-start py-0 px-0">
                <h4 class="mt-3 mb-1">Alat Pelindung Diri (APD) yang dipakai : </h4>
                <div class="row">
                  <div class="col-md-6">
                    <ul class="list-group list-group-flush list">
                      <li class="list-group-item px-0 py-2 border-0">
                        <div class="row">
                          <div class="col-auto pt-1">
                            <% if @l_six_fourth.is_gown %>
                              <span class="text-success text-sm"><%=icon("fas", "check")%></span>
                            <% else %>
                              <span class="text-danger text-sm"><%=icon("fas", "times")%>&nbsp;</span>
                            <% end %>
                          </div>
                          <div class="col ml--4">
                            <small>Gown</small>
                          </div>
                        </div>
                      </li>

                      <li class="list-group-item px-0 py-2 border-0">
                        <div class="row">
                          <div class="col-auto pt-1">
                            <% if @l_six_fourth.is_medic_mask %>
                              <span class="text-success text-sm"><%=icon("fas", "check")%></span>
                            <% else %>
                              <span class="text-danger text-sm"><%=icon("fas", "times")%>&nbsp;</span>
                            <% end %>
                          </div>
                          <div class="col ml--4">
                            <small>Masker Medis</small>
                          </div>
                        </div>
                      </li>

                      <li class="list-group-item px-0 py-2 border-0">
                        <div class="row">
                          <div class="col-auto pt-1">
                            <% if @l_six_fourth.is_gloves %>
                              <span class="text-success text-sm"><%=icon("fas", "check")%></span>
                            <% else %>
                              <span class="text-danger text-sm"><%=icon("fas", "times")%>&nbsp;</span>
                            <% end %>
                          </div>
                          <div class="col ml--4">
                            <small>Sarung Tangan</small>
                          </div>
                        </div>
                      </li>

                      <li class="list-group-item px-0 py-2 border-0">
                        <div class="row">
                          <div class="col-auto pt-1">
                            <% if @l_six_fourth.is_n95_ffp2 %>
                              <span class="text-success text-sm"><%=icon("fas", "check")%></span>
                            <% else %>
                              <span class="text-danger text-sm"><%=icon("fas", "times")%>&nbsp;</span>
                            <% end %>
                          </div>
                          <div class="col ml--4">
                            <small>Masker N95 FFP2</small>
                          </div>
                        </div>
                      </li>
                    </ul>
                  </div>
                  <div class="col-md-6">
                    <ul class="list-group list-group-flush list">
                      <li class="list-group-item px-0 py-2 border-0">
                        <div class="row">
                          <div class="col-auto pt-1">
                            <% if @l_six_fourth.is_n99_ffp3 %>
                              <span class="text-success text-sm"><%=icon("fas", "check")%></span>
