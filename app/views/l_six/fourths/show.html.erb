                              <span class="text-danger text-sm"><%=icon("fas", "times")%>&nbsp;</span>
                            <% end %>
                          </div>
                          <div class="col ml--4">
                            <small>Masker N99 FFP3</small>
                          </div>
                        </div>
                      </li>

                      <li class="list-group-item px-0 py-2 border-0">
                        <div class="row">
                          <div class="col-auto pt-1">
                            <% if @l_six_fourth.is_goggle %>
                              <span class="text-success text-sm"><%=icon("fas", "check")%></span>
                            <% else %>
                              <span class="text-danger text-sm"><%=icon("fas", "times")%>&nbsp;</span>
