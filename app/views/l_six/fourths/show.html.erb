<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <div class="card">
      <div class="card-header">
        <h3 class="mb-0">D. Faktor Kontak/Paparan</h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col">
            <ul class="list-group list-group-flush list my">
              <li class="list-group-item px-0 border-0">
                <div class="row align-items-center mb-2">
                  <div class="col">
                    <span class="h4 mb-0">
                      Dalam 14 hari sebelum sakit, apakah memiliki riwayat perjalanan keluar negeri ?
                    </span>
                    <% if @l_six_fourth.abroad == "ya" %>
                      <span class="text-success"><%=icon("fas", "check")%></span>
                      <small>Ya</small>
                    <% elsif @l_six_fourth.abroad == "tidak_tahu" %>
                      <span class="text-gray"><%=icon("fas", "question")%></span>
                      <small>Tidak Tahu</small>
                    <% elsif @l_six_fourth.abroad == "tidak" %>
                      <span class="text-danger"><%=icon("fas", "times")%></span>
                      <small>Tidak</small>
                    <% end %>
                  </div>
                  <div class="col-auto">
                    <% if @l_six_fourth.abroad == "ya" %>
                      <%= link_to 'Add', 
                        new_l_six_first_second_third_fourth_f_aboard_dest_path(
                          @l_six_first,@l_six_first.ls_second,@l_six_first.ls_third,@l_six_first.ls_fourth
                        ),
                        class: "btn btn-sm btn-primary" %>
                    <% end %>
                  </div>
                </div>
                <% if @l_six_fourth.ls_f_aboard_dests.any? %>
                  <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                      <thead class="thead-light">
                        <tr>
                          <th>Negara</th>
                          <th>Kota</th>
                          <th>Tgl Perjalanan</th>
                          <th>Tgl Tiba di Indonesia</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @l_six_fourth.ls_f_aboard_dests.each do |ad| %>
                        <tr>
                          <td><%= ad.country %></td>
                          <td><%= ad.city %></td>
                          <td><%= ad.travel_date.nil? ? "-" : ad.travel_date.strftime("%d/%m/%Y") %></td>
                          <td><%= ad.date_arrive.nil? ? "-" : ad.date_arrive.strftime("%d/%m/%Y") %></td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% end %>
              </li>

              <li class="list-group-item px-0 border-0">
                <div class="row align-items-center mb-2">
                  <div class="col">
                    <span class="h4 mb-0">
                      Dalam 14 hari sebelum sakit, apakah memiliki riwayat perjalanan ke area transmisi lokal ?
                    </span>
                    <% if @l_six_fourth.out_town == "ya" %>
                      <span class="text-success"><%=icon("fas", "check")%></span>
                      <small>Ya</small>
                    <% elsif @l_six_fourth.out_town == "tidak_tahu" %>
                      <span class="text-gray"><%=icon("fas", "question")%></span>
                      <small>Tidak Tahu</small>
                    <% elsif @l_six_fourth.out_town == "tidak" %>
                      <span class="text-danger"><%=icon("fas", "times")%></span>
                      <small>Tidak</small>
                    <% end %>
                  </div>
                  <div class="col-auto">
                    <% if @l_six_fourth.out_town == "ya" %>
                      <%= link_to 'Add', 
                        new_l_six_first_second_third_fourth_f_out_town_dest_path(
                          @l_six_first,@l_six_first.ls_second,@l_six_first.ls_third,@l_six_first.ls_fourth
                        ),
                        class: "btn btn-sm btn-primary" %>
                    <% end %>
                  </div>
                </div>
                <% if @l_six_fourth.ls_f_out_town_dests.any? %>
                  <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                      <thead class="thead-light">
                        <tr>
                          <th>Provinsi</th>
                          <th>Kota</th>
                          <th>Tgl Perjalanan</th>
                          <th>Tgl Tiba di tempat sekarang</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @l_six_fourth.ls_f_out_town_dests.each do |town| %>
                        <tr>
                          <td><%= town.province %></td>
                          <td><%= town.city %></td>
                          <td><%= town.travel_date.nil? ? "-" : town.travel_date.strftime("%d/%m/%Y") %></td>
                          <td><%= town.date_arrive.nil? ? "-" : town.date_arrive.strftime("%d/%m/%Y") %></td>
                        </tr>
                        <% end %>
                      </tbody>
                    </table>
                  </div>
                <% end %>
              </li>

              <li class="list-group-item px-0 border-0">
                <div class="row align-items-center mb-2">
                  <div class="col">
                    <span class="h4 mb-0">
                      Dalam 14 hari sebelum sakit, apakah pasien memiliki riwayat berkunjung ke fasilitas kesehatan,
                      baik sebagai pasien, pekerja atau berkunjung ?
                    </span>
                    <% if @l_six_fourth.hospital == "ya" %>
                      <span class="text-success"><%=icon("fas", "check")%></span>
                      <small>Ya</small>
                    <% elsif @l_six_fourth.hospital == "tidak_tahu" %>
                      <span class="text-gray"><%=icon("fas", "question")%></span>
                      <small>Tidak Tahu</small>
                    <% elsif @l_six_fourth.hospital == "tidak" %>
                      <span class="text-danger"><%=icon("fas", "times")%></span>
                      <small>Tidak</small>
                    <% end %>
                  </div>
                  <div class="col-auto">
                    <% if @l_six_fourth.hospital == "ya" %>
                      <%= link_to 'Add', 
                        new_l_six_first_second_third_fourth_f_hospital_dest_path(
                          @l_six_first,@l_six_first.ls_second,@l_six_first.ls_third,@l_six_first.ls_fourth
                        ),
                        class: "btn btn-sm btn-primary" %>
                    <% end %>
                  </div>
                </div>
                <% if @l_six_fourth.ls_f_hospital_dests.any? %>
