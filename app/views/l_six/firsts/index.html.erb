<% content_for :search_form do %>
  <%= search_form_for @search, url: l_six_firsts_path, class: "navbar-search navbar-search-dark form-inline mr-sm-3", id: "navbar-search-main" do |f| %>
      <div class="form-group mb-0">
          <div class="input-group input-group-alternative input-group-merge">
              <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-search"></i></span>
              </div>
              <!-- <input class="form-control" placeholder="Search" type="text"> -->
              <%= f.search_field :patient_no_identity_or_patient_name_or_interview_date_cont, class: "form-control", placeholder: "Cari ...", autocomplete: "off" %>
          </div>
      </div>
      <button type="button" class="close" data-action="search-close" data-target="#navbar-search-main" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
      </button>
  <% end %>
<% end %>
<%= content_for :judul_page do %>
  Form 6
<% end %>
<%= content_for :breadcumb do %>
    <ol class="breadcrumb breadcrumb-links">
        <li class="breadcrumb-item">
          <%= link_to l_six_firsts_path do %>
            <%= icon("fas", "file-alt") %>
          <% end %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Daftar Formulir Penyelidikan Epidemiologi Covid-19</li>
    </ol>
<% end %>
<% if policy('LSix::First'.to_sym).new? %>
    <% content_for :header_button do%>
      <%= link_to 'New',
        new_l_six_first_path,
        class: 'btn btn-sm btn-neutral'%>
    <% end %>
<% end %>
<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <div class="card">
      <div class="card-header border-0">
        <div class="row">
          <div class="col">
            <h3 class="mb-0">Daftar Formulir Penyelidikan Epidemiologi Corona Virus Disease (Covid-19)</h3>
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table align-items-center table-flush table-striped">
          <thead class="thead-light">
            <tr>
              <th>Main patient</th>
              <th>User</th>
              <th>Puskesmas/Rumah Sakit/Dinkes</th>
              <th>Interview date</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @l_six_firsts.each do |l_six_first| %>
            <tr>
              <td><%= l_six_first.patient.name %></td>
              <td><%= l_six_first.user.name %></td>
              <% if !l_six_first.user.dinkes_province.nil? %>
                <td><%= l_six_first.dinkes_province.dinkes_province %></td>
              <% elsif !l_six_first.user.dinkes_region.nil? %>
                <td><%= l_six_first.dinkes_region.dinkes_region %></td>
              <% elsif !l_six_first.user.public_health_center.nil? %>
                <td><%= l_six_first.public_health_center.public_health_center %></td>
              <% end %>
              <td><%= l_six_first.interview_date %></td>
              <td class="text-right">
                <div class="dropdown">
                  <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v"></i>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow" style="">
                    <% if policy('LSix::First'.to_sym).show? %>
                        <%= link_to 'Show',
                          l_six_first,
                          class: "dropdown-item" %>
                    <% end %>
                    <% if policy('LSix::First'.to_sym).edit? ||
                        policy('LSix::First'.to_sym).destroy? %>
                        <%= link_to 'Edit',
                          edit_l_six_first_path(l_six_first),
                          class: "dropdown-item" %>
                        <%= link_to 'Delete',
                          l_six_first,
                          method: :delete,
                          data: { confirm: 'Are you sure?' },
                          class: "dropdown-item" %>
                    <% end %>
                  </div>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer">
        <%= paginate @l_six_firsts %>
      </div>
    </div>
  </div>
<% end %>
<% if notice %>
  <div class="notifikasi" data-notifikasi="<%= notice %>"></div>
<% end %>
<%= render partial: 'layouts/body' %>
