<% content_for :search_form do %>
  <%= search_form_for @search, url: telegram_message_report_reporters_path(@telegram_message_report_reporters), class: "navbar-search navbar-search-dark form-inline mr-sm-3", id: "navbar-search-main" do |f| %>
      <div class="form-group mb-0">
          <div class="input-group input-group-alternative input-group-merge">
              <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-search"></i></span>
              </div>
              <!-- <input class="form-control" placeholder="Search" type="text"> -->
              <%= f.search_field :message_cont, class: "form-control", placeholder: "Cari ...", autocomplete: "off" %>
          </div>
      </div>
      <button type="button" class="close" data-action="search-close" data-target="#navbar-search-main" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
      </button>
  <% end %>
<% end %>
<%= content_for :judul_page do %>
  Laporan Data Diri Warga
<% end %>
<%= content_for :breadcumb do %>
    <ol class="breadcrumb breadcrumb-links">
        <li class="breadcrumb-item">
          <%= link_to telegram_message_report_reporters_path do %>
            <%= icon("fab", "telegram-plane") %>
          <% end %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Laporan Data Diri Warga</li>
    </ol>
<% end %>
<% content_for :isi do %>

<div class="container-fluid mt--6">
  <div class="card">
    <div class="card-header border-0">
      <div class="row">
        <div class="col">
          <h3 class="mb-0">Laporan Data Diri Warga</h3>
        </div>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table align-items-center table-flush table-striped">
        <thead class="thead-light">
          <tr>
            <th rowspan="2">Chat ID</th>
            <th rowspan="2">Username telegram</th>
            <th class="text-center" rowspan="2">Tgl Laporan</th>
            <th class="text-center" colspan="9">Message</th>
          </tr>
          <tr>
            <th>NIK</th>
            <th>Nama</th>
            <th class="text-center">Tgl Lahir</th>
            <th>Alamat KTP</th>
            <th>Alamat Domisili</th>
            <th class="text-center">Telp.</th>
            <th>Orang Tua</th>
            <th class="text-center">Jenis Kelamin</th>
            <th class="text-center">Status Perkawinan</th>
          </tr>
        </thead>
        <tbody>
          <% @telegram_message_report_reporters.each do |telegram_message_report_reporter| %>
            <tr>
              <td><%= telegram_message_report_reporter.chat_id %></td>
              <td><%= telegram_message_report_reporter.username_telegram %></td>
              <td class="col-1 text-center"><%= telegram_message_report_reporter.created_at.strftime("%d/%M/%Y %H:%M:%S") %></td>
              <% @message = telegram_message_report_reporter.message.split("#") %>
              <td><%= @message[0] %></td>
              <td><%= @message[1] %></td>
              <td class="text-center"><%= @message[2] %></td>
              <td class="text-wrap"><%= @message[3] %></td>
              <td class="text-wrap"><%= @message[4] %></td>
              <td class="text-center"><%= @message[5] %></td>
              <td><%= @message[6] %></td>
              <td class="text-center"><%= @message[7] %></td>
              <td class="text-center">
                  <% if @message[8]=="1" %>
                      <%= "Belum Menikah" %>
                  <% elsif @message[8]=="2" %>
                      <%= "Menikah" %>
                  <% elsif @message[8]=="3" %>
                      <%= "Duda" %>
                  <% elsif @message[8]=="4" %>
                      <%= "Janda" %>
                  <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>
<% if notice %>
  <div class="notifikasi" data-notifikasi="<%= notice %>"></div>
<% end %>
<%= render partial: 'layouts/body' %>
