<%= content_for :judul_page do %>
  Laporan Warga Kontak Erat
<% end %>
<%= content_for :breadcumb do %>
    <ol class="breadcrumb breadcrumb-links">
        <li class="breadcrumb-item">
          <%= link_to telegram_message_traveler_reporters_path do %>
            <%= icon("fab", "telegram-plane") %>
          <% end %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Laporan Warga Kontak Erat</li>
    </ol>
<% end %>
<% content_for :isi do %>

<div class="container-fluid mt--6">
  <div class="card">
    <div class="card-header border-0">
      <div class="row">
        <div class="col">
          <h3 class="mb-0">Laporan Warga Kontak Erat</h3>
        </div>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table align-items-center table-flush table-striped">
        <thead class="thead-light">
          <tr>
            <th>Chat ID</th>
            <th>Username telegram</th>
            <th>Message</th>
            <th>Pewawancara Form 11</th>
            <th>Tanggal Wawancara</th>
          </tr>
        </thead>
        <tbody>
          <% @telegram_message_closecont_reporters.each do |telegram_message_closecont_reporter| %>
            <tr>
              <td><%= telegram_message_closecont_reporter.chat_id %></td>
              <td><%= telegram_message_closecont_reporter.username_telegram %></td>
              <td><%= telegram_message_closecont_reporter.message %></td>
              <td>
                <%= telegram_message_closecont_reporter.user.nil? ? "-" : telegram_message_closecont_reporter.user.name %>
              </td>
              <td>
                <%= telegram_message_ili_reporter.close_contact_information.nil? ? "-" : telegram_message_ili_reporter.close_contact_information.fill_in_date.strftime("%d/%m/%Y") %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>
<% if notice %>
  <div class="notifikasi" data-notifikasi="<%= notice %>"></div>
<% end %>
<%= render partial: 'layouts/body' %>

