
<% if policy('Main::Patient'.to_sym).new? %>
    <% content_for :header_button do%>
      <%= link_to 'New', new_main_patient_path,
      class: 'btn btn-sm btn-neutral',
      data: {'toggle': 'modal', }, remote: true %>
    <% end %>
<% end %>

<% content_for :isi do %>
<%= form_for(@main_patients, url: main_patients_path, :method => get) do |form| %>

  <div class="modal-body">
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <label for="main_patient_no_identity" class="form-control-label">No. KTP</label>
          <%= form.text_field :no_identity, class: 'form-control', placeholder: 'No. KTP' %>
        </div>

        <div class="form-group">
          <label for="main_patient_name" class="form-control-label">Nama Lengkap</label>
          <%= form.text_field :name, class: 'form-control', placeholder: 'Nama Lengkap' %>
        </div>

        <div class="form-group">
          <label for="main_patient_date_of_birth" class="form-control-label">Tanggal Lahir</label>
          <%= form.text_field :date_of_birth, class: 'form-control datepicker' %>
        </div>

        <div class="form-group">
          <label for="main_patient_address" class="form-control-label">Alamat</label>
          <%= form.text_area :address, class: 'form-control', rows: 3 %>
        </div>
      </div>
      <div class="col-md-4">

        <div class="form-group">
          <label for="main_patient_main_city_id" class="form-control-label">Kabupaten/Kota</label>
          <% if (params[:main_patient][:main_city_id].blank?) %>
            <%= form.collection_select(:main_city_id,
              Main::City.all,
              :slug,
              :city,
              {:prompt => 'Choose Kota'},
              {class: "form-control kabupaten_kota",
              required: true,
              "data-toggle": "select",
              "title": "Kota/Kab",
              "data-live-search": "true",
              "data-live-search-placeholder": "Cari ...",
              "data-placeholder": "Kabupaten/Kota"}) %>
          <% else %>
            <%= form.collection_select(:main_city_id,
              Main::City.all,
              :slug,
              :city,
              {:prompt => 'Choose Kota',
              selected: @main_city.slug},
              {class: "form-control kabupaten_kota",
              required: true,
              "data-toggle": "select",
              "title": "Kota/Kab",
              "data-live-search": "true",
              "data-live-search-placeholder": "Cari ...",
              "data-placeholder": "Kabupaten/Kota"}) %>
          <% end %>
        </div>

        <div class="form-group">
          <label for="main_patient_main_district_id" class="form-control-label">Kecamatan</label>
          <% if (params[:main_patient][:main_district_id].blank?) %>
            <%= form.collection_select(:main_district_id,
              [],
              '',
              '',
              {:prompt => false},
              {class: "form-control kecamatan",
              required: true,
              "data-toggle": "select",
              "title": "Kecamatan",
              "data-live-search": "true",
              "data-live-search-placeholder": "Cari ...",
              "data-placeholder": "Kecamatan"}) %>
          <% else %>
            <%= form.collection_select(:main_district_id,
              Main::District.all,
              :slug,
              :district,
              {:prompt => 'Choose Kecamatan',
              selected: @main_district.slug},
              {class: "form-control kecamatan",
              required: true,
              "data-toggle": "select",
              "title": "Kecamatan",
              "data-live-search": "true",
              "data-live-search-placeholder": "Cari ...",
              "data-placeholder": "Kecamatan"}) %>
          <% end %>
        </div>

        <div class="form-group">
          <label for="main_patient_main_sub_district_id" class="form-control-label">Kelurahan</label>
          <% if (params[:main_patient][:main_sub_district_id].blank?) %>
            <%= form.collection_select(:main_sub_district_id,
              [],
              '',
              '',
              {:prompt => false},
              {class: "form-control kelurahan",
              required: true,
              "data-toggle": "select",
              "title": "Kelurahan/Desa",
              "data-live-search": "true",
              "data-live-search-placeholder": "Cari ...",
              "data-placeholder": "Kelurahan"}) %>
          <% else %>
            <%= form.collection_select(:main_sub_district_id,
              Main::SubDistrict.all,
              :slug,
              :sub_district,
              {:prompt => 'Choose Kelurahan/Desa',
              selected: @main_patient.sub_district.slug},
              {class: "form-control kelurahan",
              required: true,
              "data-toggle": "select",
              "title": "Kelurahan/Desa",
              "data-live-search": "true",
              "data-live-search-placeholder": "Cari ...",
              "data-placeholder": "Kelurahan"}) %>
          <% end %>
        </div>

        <div class="form-group">
          <label for="main_patient_main_citizen_association_id" class="form-control-label">RW</label>
          <% if (params[:main_patient][:main_citizen_association_id].blank?) %>
            <%= form.collection_select(:main_citizen_association_id,
              [],
              '',
              '',
              {:prompt => false},
              {class: "form-control erwe",
              required: true,
              "data-toggle": "select",
              "title": "RW",
              "data-live-search": "true",
              "data-live-search-placeholder": "Cari ...",
              "data-placeholder": "RW"}) %>
          <% else %>
            <%= form.collection_select(:main_citizen_association_id,
              Main::CitizenAssociation.all,
              :slug,
              :citizen_association,
              {:prompt => 'Choose RW',
              selected: @main_patient.citizen_association.slug},
              {class: "form-control erwe",
              required: true,
              "data-toggle": "select",
              "title": "RW",
              "data-live-search": "true",
              "data-live-search-placeholder": "Cari ...",
              "data-placeholder": "RW"}) %>
          <% end %>
        </div>

        <div class="form-group">
          <label for="main_patient_main_neighborhood_association_id" class="form-control-label">RT</label>
          <% if (params[:action]=="new") || (params[:action]=="create") %>
            <%= form.collection_select(:main_neighborhood_association_id,
              [],
              '',
              '',
              {:prompt => false},
              {class: "form-control erte",
              required: true,
              "data-toggle": "select",
              "title": "RT",
              "data-live-search": "true",
              "data-live-search-placeholder": "Cari ...",
              "data-placeholder": "RT"}) %>
          <% else %>
            <%= form.collection_select(:main_neighborhood_association_id,
              Main::NeighborhoodAssociation.all,
              :slug,
              :neighborhood_association,
              {:prompt => false,
              selected: @main_patient.neighborhood_association.slug},
              {class: "form-control erte",
              required: true,
              "data-toggle": "select",
              "title": "RT",
              "data-live-search": "true",
              "data-live-search-placeholder": "Cari ...",
              "data-placeholder": "RT"}) %>
          <% end %>
        </div>

      </div>
      <div class="col-md-4">

        
        <div class="form-group">
          <label for="main_patient_main_marital_status_id" class="form-control-label">Status Pernikahan</label>
          <% if (params[:action]=="new") || (params[:action]=="create") %>
            <%= form.collection_select(:main_marital_status_id,
              Main::MaritalStatus.all,
              :slug,
              :marital_status,
              {:prompt => 'Choose Marital Status'},
              {class: "form-control",
              required: true,
              "data-toggle": "select",
              "title": "Example (Belum Menikah)",
              "data-live-search": "true",
              "data-live-search-placeholder": "Cari ...",
              "data-placeholder": "Status Pernikahan"}) %>
          <% else %>
            <%= form.collection_select(:main_marital_status_id,
              Main::MaritalStatus.all,
              :slug,
              :marital_status,
              {:prompt => 'Choose Marital Status',
              selected: @main_patient.marital_status.slug},
              {class: "form-control",
              required: true,
              "data-toggle": "select",
              "title": "Example (Belum Menikah)",
              "data-live-search": "true",
              "data-live-search-placeholder": "Cari ...",
              "data-placeholder": "Status Pernikahan"}) %>
          <% end %>
        </div>
        
        <div class="form-group">
          <label for="main_patient_name_of_parent" class="form-control-label">Nama Orang Tua</label>
          <%= form.text_field :name_of_parent, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <label for="main_patient_phone_number" class="form-control-label">Nomor Telepon</label>
          <%= form.text_field :phone_number, class: 'form-control' %>
        </div>

        <div class="form-group">
          <label for="main_patient_gender" class="form-control-label">Jenis Kelamin</label><br>
          <% if (params[:action]=="new") || (params[:action]=="create") %>
            
            <div class="custom-control custom-radio custom-control-inline">
              <%= form.radio_button(:gender, "male", {class: 'custom-control-input'}) %>
              <label for="main_patient_gender_male" class="custom-control-label">Laki-laki</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
              <%= form.radio_button(:gender, "female", {class: 'custom-control-input'}) %>
              <label for="main_patient_gender_female" class="custom-control-label">Perempuan</label>
            </div>
            
          <% else %>
            <div class="custom-control custom-radio custom-control-inline">
              <%= form.radio_button(:gender, "male", {checked: @main_patient.gender == 'Male' ? true : false, class: 'custom-control-input'}) %>
              <label for="main_patient_gender_male" class="custom-control-label">Laki-laki</label>
            </div>
            <div class="custom-control custom-radio custom-control-inline">
              <%= form.radio_button(:gender, "female", {checked: @main_patient.gender == 'Female' ? true : false, class: 'custom-control-input'}) %>
              <label for="main_patient_gender_female" class="custom-control-label">Perempuan</label>
            </div>
          <% end %>
        </div>
      </div>

      
    </div>
  </div>
  
  <div class="modal-footer">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
  </div>
<% end %>
  <div class="container-fluid mt--6">
    <div class="card">
      <div class="card-header border-0">
        <div class="row">
          <div class="col">
            <h3 class="mb-0">Daftar Pasien</h3>
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table align-items-center table-flush table-striped">
          <thead class="thead-light">
            <tr>
              <th>No. KTP</th>
              <th>Nama Lengkap</th>
              <th>Tanggal Lahir</th>
              <th>Alamat</th>
              <th>Kabupaten/Kota</th>
              <th>Kecamatan</th>
              <th>Kelurahan</th>
              <th>RW</th>
              <th>RT</th>
              <th>Status Pernikahan</th>
              <th>Nama Orang Tua</th>
              <th>Nomor Telepon</th>
              <th>Jenis Kelamin</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @main_patients.each do |main_patient| %>
            <tr>
              <td><%= main_patient.no_identity %></td>
              <td><%= main_patient.name %></td>
              <td><%= main_patient.date_of_birth %></td>
              <td><%= main_patient.address %></td>
              <td><%= main_patient.city.city %></td>
              <td><%= main_patient.district.district %></td>
              <td><%= main_patient.sub_district.sub_district %></td>
              <td><%= main_patient.citizen_association.citizen_association %></td>
              <td><%= main_patient.neighborhood_association.neighborhood_association %></td>
              <td><%= main_patient.marital_status.marital_status %></td>
              <td><%= main_patient.name_of_parent %></td>
              <td><%= main_patient.phone_number %></td>
              <td><%= main_patient.gender == 'Male' ? 'Laki-laki' : 'Perempuan' %></td>
              <td class="text-right">
                <% if policy('Main::Patient'.to_sym).edit? %>
                    <%= link_to edit_main_patient_path(main_patient),
                      class: 'table-action', remote: true,
                      data: {'toggle': 'tooltip', 'original-title': 'Edit'} do %>
                      <% icon('far', 'edit') %>
                    <% end %>
                <% end %>
                <% if policy('Main::Patient'.to_sym).destroy? %>
                    <%= link_to main_patient, method: :delete,
                      data: {
                        confirm: 'Are you sure?',
                        'toggle': 'tooltip',
                        'original-title': 'Delete',
                        'bootstrap-confirm': 'delete' },
                      class: 'table-action' do %>
                      <% icon('fas', 'trash') %>
                    <% end %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="card-footer">
        <%= paginate @main_patients %>
      </div>
    </div>
  </div>

  <div class="modal fade modal-new" id="newPatient" tabindex="-1" role="dialog" aria-labelledby="newPatientLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="newPatientLabel">New Pasien</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div id="renderNewPatientForm"></div>
      </div>
    </div>
  </div>

  <div class="modal fade modal-edit" id="editPatient" tabindex="-1" role="dialog" aria-labelledby="editPatientLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editPatientLabel">Edit Pasien</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div id="renderEditPatientForm"></div>
      </div>
    </div>
  </div>
<% end %>
<% if notice %>
  <div class="notifikasi" data-notifikasi="<%= notice %>"></div>
<% end %>
<%= render partial: 'layouts/body' %>
