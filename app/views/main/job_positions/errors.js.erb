<% if @main_job_position.errors.any? %>
    <% @main_job_position.errors.details.each_with_index do |message, key| %>
        objId = $("#main_<%= message[0] %>_<%= message[0] %>");
        objId.closest('.form-group').addClass('has-danger');
        objId.siblings('.invalid-feedback').text("<%= @main_job_position.errors.full_messages[key].html_safe %>");
        objId.addClass('is-invalid');
    <% end %>
<% end %>