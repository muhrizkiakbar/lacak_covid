<% content_for :header_button do%>
  <%= link_to 'New', '#newProvince', class: 'btn btn-sm btn-neutral', data: {'toggle': 'modal', } %>
<% end %>
<% content_for :isi do %>
  <div class="container-fluid mt--6">
    <div class="card">
      <div class="card-header border-0">
        <div class="row">
          <div class="col">
            <h3 class="mb-0">Daftar Provinsi</h3>
          </div>
        </div>
      </div>
      <div class="table-responsive">
        <table class="table align-items-center table-flush table-striped">
          <thead class="thead-light">
            <tr>
              <th>Nama Provinsi</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @main_provinces.each do |main_province| %>
            <tr>
              <td><%= main_province.province %></td>
              <td class="text-right">
                <div class="dropdown">
                  <a href="#" class="btn btn-sm btn-icon-only text-light" role="button" data-toggle="dropdown" 
                  aria-haspopup="true" aria-expanded="false">
                    <%= icon("fas", "ellipsis-v") %>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                    <%= link_to 'Edit', edit_main_province_path(main_province),
                    class: 'dropdown-item' %>
                    <%= link_to 'Destroy', main_province, method: :delete, data: { confirm: 'Are you sure?' },
                    class: 'dropdown-item' %>
                    <%= link_to 'Add City', main_province_cities_path(main_province),
                    class: 'dropdown-item' %>
                  </div>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="modal fade" id="newProvince" tabindex="-1" role="dialog" aria-labelledby="newProvinceLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="newProvinceLabel">New Provinsi</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <%= render partial: 'form', locals:{main_province: Main::Province.new} %>        
      </div>
    </div>
  </div>
<% end %>
<%= notice %>
<%= render partial: 'layouts/body' %>