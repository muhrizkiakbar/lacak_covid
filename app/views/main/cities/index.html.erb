<p id="notice"><%= notice %></p>

<h1>Main Cities</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Main province</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @main_province.cities.each do |main_city| %>
      <tr>
        <td><%= main_city.city %></td>
        <td><%= main_city.province.province %></td>
        <td><%= link_to 'Edit', edit_main_province_city_path(@main_province,main_city) %></td>
        <td><%= link_to 'Destroy', main_province_city_path(@main_province,main_city), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add District', main_province_city_districts_path(@main_province,main_city) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Main City', new_main_province_city_path(@main_province) %>
