<p id="notice"><%= notice %></p>

<h1>Main Job Types</h1>

<table>
  <thead>
    <tr>
      <th>Job type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @main_job_types.each do |main_job_type| %>
      <tr>
        <td><%= main_job_type.job_type %></td>
        <td><%= link_to 'Show', main_job_type %></td>
        <td><%= link_to 'Edit', edit_main_job_type_path(main_job_type) %></td>
        <td><%= link_to 'Destroy', main_job_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

