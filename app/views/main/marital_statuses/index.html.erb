<p id="notice"><%= notice %></p>

<h1>Main Marital Statuses</h1>

<table>
  <thead>
    <tr>
      <th>Marital status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @main_marital_statuses.each do |main_marital_status| %>
      <tr>
        <td><%= main_marital_status.marital_status %></td>
        <td><%= link_to 'Show', main_marital_status %></td>
        <td><%= link_to 'Edit', edit_main_marital_status_path(main_marital_status) %></td>
        <td><%= link_to 'Destroy', main_marital_status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

