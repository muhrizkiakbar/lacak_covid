<%= content_for :judul_page do %>
  Roles Permission
<% end %>
<%= content_for :breadcumb do %>
    <ol class="breadcrumb breadcrumb-links">
        <li class="breadcrumb-item">
          <%= link_to roles_path do %>
            <%= icon("fas", "users") %>
          <% end %>
        </li>
        <li class="breadcrumb-item">
          <%= link_to roles_path do %>
            Roles
          <% end %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Roles Permission</li>
    </ol>
<% end %>
<% content_for :isi do%>
  <%= form_for [@role,@role_permission] do |form| %>
    <div class="container-fluid mt--6">
      <div class="card">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col">
              <h3 class="mb-0"><%= @role.name %></h3>
            </div>
            <div class="col text-right">
              <%= form.submit 'Create Role Premission', class: 'btn btn-sm btn-neutral' %>
            </div>
          </div>
        </div>
      </div>

      <% @permissions.group_by(&:resource).each do |resource_of,value| %>
        <div class="card">
          <div class="card-header border-0">
            <div class="row">
              <div class="col">
                <h3 class="mb-0">
                  Resource : <%= resource_of %>
                </h3>
              </div>
            </div>
          </div>
          <div class="table-responsive">
            <table class="table align-items-center table-flush table-striped">
              <thead class="thead-light">
                <tr>
                  <th></th>
                  <th>Name</th>
                  <th>Action</th>
                  <th>Page</th>
                  <th>Description</th>
                </tr>
              </thead>
              <tbody>
                <% @permissions.where('resource = ?',resource_of).each do |resource_of_permission| %>
                <tr>
                  <% if RolePermission.check_status(@role.id,resource_of_permission.id) %>
                    <td> <%= check_box("permissions", resource_of_permission.id, {checked: true}) %></td>
                  <% else %>
                    <td> <%= check_box("permissions", resource_of_permission.id, {checked: false}) %></td>
                  <% end %>  
                  <td><%= resource_of_permission.name %></td>
                  <td><%= resource_of_permission.action %></td>
                  <td><%= resource_of_permission.page %></td>
                  <td><%= resource_of_permission.description %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
<% end %>
<% if notice %>
  <div class="notifikasi" data-notifikasi="<%= notice %>"></div>
<% end %>
<%= render partial: 'layouts/body' %>
