<% content_for :isi do %>
<div class="main-content">
  <!-- Header -->
  <div class="header bg-gradient-danger py-7 py-lg-7 pt-lg-5">
    <div class="container">
      <div class="header-body text-center mb-7">
        <div class="row justify-content-center">
          <div class="col-xl-5 col-lg-6 col-md-8 px-5">
            <h1 class="text-white">Lacak Covid19 Kalsel</h1>
            <p class="text-lead text-white">Sistem informasi Pelacakan Covid19 di Provinsi Kalimantan Selatan</p>
          </div>
        </div>
      </div>
    </div>
    <div class="separator separator-bottom separator-skew zindex-100">
      <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
        <polygon class="fill-custom" points="2560 0 2560 100 0 100"></polygon>
      </svg>
    </div>
  </div>
  <!-- Page content -->
  <div class="container mt--8 pb-5">
    <div class="row justify-content-center">
      <div class="col-lg-5 col-md-7">
        <div class="card bg-secondary border-0 mb-0">
          <div class="card-body px-lg-5 py-lg-5">
            <div class="text-center text-muted mb-4">
              <small>Lupa Password?</small>
            </div>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group mb-3">
                <div class="input-group input-group-merge input-group-alternative">
                  <div class="input-group-prepend">
                    <span class="input-group-text"><%= icon("fas", "envelope") %></span>
                  </div>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: 'form-control', placeholder: "email" %>
                </div>
              </div>
              <div class="text-center actions">
                <%= f.submit 'Reset Password', class: "btn btn-primary my-4" %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row mt-3">
          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>


</div>

<% end %>
<% flash.each do |type, msg| %>
  <% if type == "notice" %>
    <div class="sessions-notification" data-notifikasi="<%=flash.notice%>" data-type="notice"></div>
  <% elsif type == "alert" %>
    <div class="sessions-notification" data-notifikasi="<%=flash.alert%>" data-type="alert"></div>
  <% end %>
<% end %>
<%= render partial: 'layouts/body' %>