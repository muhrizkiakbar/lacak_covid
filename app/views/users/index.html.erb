<div class="container-fluid mt--6">
    <p id="notice"><%= notice %></p>

    <div class="card">
      <div class="card-header">
        <h3>Users</h3>
      </div>
      <div class="card-body">
        <div class="table-responsive py-3">
          <table class="table table-flush" >
            <thead class="thead-light">
              <tr>
                <th>Email</th>
                <th>Username</th>
                <th>Name</th>
                <th>Dinas Kesehatan Province</th>
                <th>Dinas Kesehatan Region</th>
                <th>Rumah Sakit</th>
                <th>Puskesmas</th>
                <th>Role</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.email %></td>
                  <td><%= user.username %></td>
                  <td><%= user.name %></td>
                  <td><%= user.dinkes_province.dinkes_province %></td>
                  <td><%= user.dinkes_region.dinkes_region %></td>
                  <td><%= user.hospital.name %></td>
                  <td><%= user.public_health_center.public_health_center %></td>
                  <td><%= user.role.name %></td>
                  <td>
                    <%= link_to user, class: "btn btn-icon btn-sm btn-info" do %>
                      <%= icon("fas","eye", class: "text-white")%>
                    <% end %>
                    <%= link_to edit_user_path(user), class: "btn btn-icon btn-sm btn-warning" do %>
                      <%= icon("fas", "edit", class: "text-white")%>
                    <% end %>
                    <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-icon btn-sm btn-danger" do %>
                      <%= icon("fas", "trash", class: "text-white")%>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="card-footer">
      </div> 
    </div>

    
    <br>
    <%# paginate @cities %>



  </div>